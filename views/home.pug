extends layout.pug 

block number1
  if error
    p Please input your task!
  if success
    p Your task was added!
  form.form(action='/add' method='POST')
    input.input(type='text' placeholder='Please add your tasks...' name="todo")
    button.btn Add
 
 div.todos
   if todos.length
     each todo in todos  
       p.todo #{ todo.description } 
    else
      p.todo No tasks are available



